            VerticalAlignment="Top"
            Click="btnPopUpMessage_Click" />


        <Label
            Content="First Name: "
            Canvas.Left="281"
            Canvas.Top="70" />

        <TextBox
            x:Name="txtFirstName"
            Canvas.Left="359"
            TextWrapping="Wrap"
            Text="Will"
            Canvas.Top="74"
            Width="120" />
        <TextBox
            x:Name="txtNum1"
            Canvas.Left="295"
            TextWrapping="Wrap"
            Text="TextBox"
            Canvas.Top="195"
            Width="59"
            Height="31" />
        <TextBox
            x:Name="txtNum2"
            Canvas.Left="396"
            TextWrapping="Wrap"
            Text="TextBox"
            Canvas.Top="195"
            Width="59"
            Height="31"
            HorizontalAlignment="Left"
            VerticalAlignment="Center" />
        <Button
            x:Name="btnAddNumbers"
            Content="Sum Numbers"
            Canvas.Left="295"
            Canvas.Top="246"
            Height="34"
            Width="156"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Click="btnAddNumbers_Click" />

        <!--Button
        TextBox
        Label
        MessageBox-->

    </Canvas>

</Window>
